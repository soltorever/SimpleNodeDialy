{
  "log4js": {
    "level": "ALL",
    "configure" : {
      "appenders": [
        {
          "category": "app",
          "type": "file",
          "filename": "./logs/app.log",
          "pattern": "-yyyy-MM-dd"
        },
        {
          "category": "access",
          "type": "file",
          "filename": "./logs/access.log"
        },
        {
          "category": "error",
          "type": "file",
          "filename": "./logs/error.log"
        }
      ],
      "replaceConsole": false
    }
  },
  "sqlite3": {
    "dbPath": "data/dialy.db"
  }
}
